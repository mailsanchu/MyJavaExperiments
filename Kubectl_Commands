seq 1 3 | parallel -k -j 5 -I{} mKube get pods -l app=edge -L routeoffer,version --sort-by='.status.containerStatuses[0].restartCount' --context cs-prod{} | hl -g  ".*\s0\s.*" -r ".*\s[1-9]\s.*"  | column -t -o "                "
